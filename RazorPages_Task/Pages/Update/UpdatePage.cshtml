@page
@model RazorPages_Task.Pages.Update.UpdatePageModel
@{

}

<!DOCTYPE html>

<html>

<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <style>
        body {
            margin: 0;
            padding: 0;
            background-color: aliceblue;
            background-size: cover;
        }

        #cards {
            width: 50%;
            height: 80vh;
            background-color: rgba(178, 207, 232,0.5);
            text-align: center;
            border-radius: 25px;
            margin: auto;
            margin-top: 5%;
        }

        p {
            font-size: 2.5em;
            font-family: 'Courier New', Courier, monospace;
        }

        form {
            margin: auto;
            margin-left: 25%;
            text-align: left;
        }

            form > label {
                font-size: 2.5em;
            }

            form > input {
                font-size: 2em;
                width: 40%;
                height: 4vh;
            }

            form > button {
                width: 35%;
                height: 4vh;
                border-radius: 25px;
                font-size: 18px;
                margin-left: 10%;
                background-color: rgb(42, 156, 255);
                color: white;
            }
    </style>
</head>
<body>
    <div id="cards">
        <p>Person Add</p>
        <form method="post">
            <label>Id:</label>
            <input asp-for="Person.Id" />
            <br />
            <br />
            <label>Firstname:</label>
            <input asp-for="Person.Name" />
            <br />
            <br />
            <label>Lastname:</label>
            <input asp-for="Person.Surname" />
            <br />
            <br />
            <label>Age:</label>
            <input asp-for="Person.Age" />
            <br />
            <br />
            <label>Address:</label>
            <input asp-for="Person.Address" />
            <br />
            <br />
            <label>Salary:</label>
            <input asp-for="Person.Salary" />
            <br />
            <br />
            <button type="submit">Add</button>
        </form>
    </div>



</body>
</html>
