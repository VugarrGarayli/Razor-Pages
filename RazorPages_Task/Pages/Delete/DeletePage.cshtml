@page
@model RazorPages_Task.Pages.Delete.DeletePageModel
@{ }


<!DOCTYPE html>

<html>

<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <style>
        body {
            margin: 0;
            padding: 0;
            background-image: url("/img.webp");
            background-size: cover;
        }

        #cards {
            width: 50%;
            height: 80vh;
            background-color: rgba(178, 207, 232, 0.5);
            text-align: center;
            border-radius: 25px;
            margin: auto;
            margin-top: 5%;
        }

        p {
            font-size: 2.5em;
            font-family: 'Courier New', Courier, monospace;
        }

        form {
            margin: auto;
            margin-top: 25%;
            margin-left: 25%;
            text-align: left;
        }

            form > label {
                font-size: 2.8em;
            }

            form > input {
                font-size: 2.5em;
                width: 40%;
                height: 4vh;
            }

            form > button {
                width: 40%;
                height: 6vh;
                border-radius: 25px;
                font-size: 2em;
                margin: auto;
                margin-top: 10%;
                margin-left: 5%;
                background-color: rgb(42, 156, 255);
                color: white;
            }
    </style>
</head>
<body>
    <div id="cards">
        <p>Person Delete</p>
        <form method="post">
            <label>Id :</label>
            <input asp-for="id" />
            <br />
            <br />
            <button type="submit">Delete</button>
        </form>
    </div>

</body>
</html>

